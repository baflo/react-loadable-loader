{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./dist",
        "rootDirs": ["./src", "./example"],
        "strict": true
    },
    "include": [
        "./src"
    ]
}